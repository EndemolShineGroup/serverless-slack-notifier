{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "es2015"
    ],
    "moduleResolution": "node",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./services",
    "sourceMap": true,
    "strict": true,
    "target":"ES2018"
  },
  "include": [
    "services/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.integ.ts",
    "**/__fixtures__/*.*"
  ]
}
