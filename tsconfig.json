{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "declaration": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "esnext",
      "es2015"
    ],
    "moduleResolution": "node",
    "module": "commonjs",
    "outDir": "dist",
    "paths": {
      "@lib/*": ["lib/*"],
      "@src/*": ["*"]
    },
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target":"ES2018"
  },
  "include": [
    "src/services/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.integ.ts",
    "**/__fixtures__/*.*"
  ]
}
